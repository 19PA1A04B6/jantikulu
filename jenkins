pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/19PA1A04B6/jantikulu.git',
                    credentialsId: 'github-creds'
            }
        }

        stage('Run Python Script') {
            steps {
                sh '''
                    mkdir -p reports
                    python3 Smaple.py > reports/output.txt
                '''
            }
        }

        stage('Commit & Push Output') {
            steps {
                sh '''
                    git config user.email "19pa1a04a3@vishnu.edu.in"
                    git config user.name "19PA1A04B6"

                    git add reports/output.txt
                    git commit -m "Jenkins: Save Python output" || echo "No changes to commit"
                    git push origin main
                '''
            }
        }
    }
}
