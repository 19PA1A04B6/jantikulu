pipeline {
    agent any

    stages {
        stage('Run Python Script') {
            steps {
                sh '''
                mkdir -p reports
                python3 Smaple.py > reports/output.txt
                '''
            }
        }
        stage('Save Output to Git') {
            steps {
                sh '''
                git init
                git config user.email "19pa1a04a3@vishnu.edu.in"
                git config user.name "19PA1A04B6"
                # Example: save test report
                cp reports/output.txt
 
                git add reports/
                git commit -m "Add test reports from Jenkins build ${BUILD_NUMBER}" || echo "No changes to commit"
                git push origin HEAD:main
                '''
            }
        }
    }
}
